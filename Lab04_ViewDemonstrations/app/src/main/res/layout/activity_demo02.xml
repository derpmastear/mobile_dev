<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoActivity02">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/Top_Mid"
        android:src="@drawable/krabby"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Mid_Right"
        android:src="@drawable/krabby"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Mid_Left"
        android:src="@drawable/krabby"
        app:layout_constraintTop_toBottomOf="@id/Mid_Right"
        app:layout_constraintLeft_toRightOf="@id/Mid_Right" />

</androidx.constraintlayout.widget.ConstraintLayout>